# Style

# Window titles
set -g set-titles on
#set -g set-titles-string "#T"
setw -g automatic-rename on
# Start numbering at 1 for windows and panes
set -g base-index 1
set -g renumber-windows on
setw -g pane-base-index 1


# Activity monitoring
setw -g monitor-activity on

# Removes the big yellow "visual" messages
set -g visual-activity off
set -g visual-bell off


# Status Bar
set -g status-position bottom
set -g status-interval 5

set -g status-left "#[fg=colour245,bg=black] #[bg=colour234]#{?client_prefix,#[reverse],} #S #[noreverse]#[bg=black] "

set -g status-style fg=colour245
set -g status-style bg=black
set -g window-status-separator ' '
set -g window-status-format "#[bg=colour234] #I #W "
#set -g window-status-current-style bg=blue
set -g window-status-current-format "#[fg=colour234,bg=colour39,noreverse,bold] #I #W "

set -g status-right-style fg=colour245
set -g status-right-style bg=black
# #[fg=colour245,bg=colour234,nobold] %R #[bg=black] 
# #[fg=colour245,bg=colour234] %d %b #[bg=black]
set -g status-right "#[fg=colour234,bg=colour39,bold] #h #[bg=black,nobold] "


# Panes
set -g pane-border-style fg=colour245
set -g pane-active-border-style fg=colour234
