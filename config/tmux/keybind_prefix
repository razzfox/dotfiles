# Keybind

# General
# Prefix (not used often in my setup)
unbind C-b
set -g prefix C-a

bind a send-prefix
bind d detach
bind Q confirm-before -p "kill-session #S? (y/n)" kill-session
bind r source-file "$TMUX_CONF" \; display-message "tmux: source-file $TMUX_CONF"
bind ? list-keys

# Save buffer
bind { command-prompt -p 'save history to filename:' -I '~/tmux.history' 'capture-pane -S -32768 ; save-buffer %1 ; delete-buffer'
bind } command-prompt "find-window '%%'"

# Copy Buffer
bind = choose-buffer
bind + delete-buffer
bind [ copy-mode
bind ] paste-buffer

# Clipboard (requires xclip)
# Save into system clipboard (+). With preselection.
bind k choose-buffer "run \"tmux save-buffer -b %% - | xclip -in -display :0 -sel clipboard\" \; run \" tmux display \\\"Clipboard \(+\) filled with: $(tmux save-buffer -b %1 - | dd ibs=1 obs=1 status=noxfer count=80 2> /dev/null)... \\\" \" "
# Copy from + clipboard.
bind u run "tmux set-buffer \"$(xclip -out -display :0 -sel clipboard)\"; tmux paste-buffer" \; run "tmux display \"Copied from \(+\) $(xclip -out -display :0 -sel clipboard | dd ibs=1 obs=1 status=noxfer count=80 2> /dev/null)... \""
# Save into selection clipboard (*). With preselection.
bind K choose-buffer "run \"tmux save-buffer -b %% - | xclip -in -display :0 \" \; run \" tmux display \\\"Clipboard \(*\) filled with: $(tmux save-buffer -b %1 - | dd ibs=1 obs=1 status=noxfer count=80 2> /dev/null)... \\\" \" "
# Copy from * clipboard.
bind U run "tmux set-buffer \"$(xclip -out -display :0)\"; tmux paste-buffer" \; run "tmux display \"Copied from \(*\) $(xclip -o | dd ibs=1 obs=1 status=noxfer count=80 2> /dev/null)... \""


# Manage Windows (Tags)
bind c new-window
bind X confirm-before -p "kill-window (Tag) '#I #W'? (y/N)" kill-window

# Reorder Windows
# Shift-,
bind < swap-window -t -1
# Shift-.
bind > swap-window -t +1
# Shift-' swap last window
bind '"' swap-window -t !

# Focus Windows
bind "'" last-window
bind , previous-window
bind . next-window

bind 1 select-window -t :1
bind 2 select-window -t :2
bind 3 select-window -t :3
bind 4 select-window -t :4
bind 5 select-window -t :5
bind 6 select-window -t :6
bind 7 select-window -t :7
bind 8 select-window -t :8
bind 9 select-window -t :9
bind 0 select-window -t :0


# Manage Panes (Frames)
# New pane right
bind \ split-window -h
# New pane down
bind - split-window -v
bind x confirm-before -p "kill-pane (Frame) '#I #W[#P]'? (y/N)" kill-pane

# Move pane to new window. 'C' is case-sensitive
bind C break-pane

bind ! join-pane -t :1
bind @ join-pane -t :2
bind '#' join-pane -t :3
bind '$' join-pane -t :4
bind % join-pane -t :5
bind ^ join-pane -t :6
bind & join-pane -t :7
bind * join-pane -t :8
bind ( join-pane -t :9
bind ) join-pane -t :0

# Move panes
bind S-Left move-pane -t left
bind S-Right move-pane -t right
bind S-Up move-pane -t top
bind S-Down move-pane -t bottom

bind o rotate-window
bind f next-layout

# Resize panes
bind -n C-Left resize-pane -L 5
bind -n C-Right resize-pane -R 5
bind -n C-Up resize-pane -U 5
bind -n C-Down resize-pane -D 5
# corrects for nested tmux sessions
bind -r C-Left resize-pane -L 5
bind -r C-Right resize-pane -R 5
bind -r C-Up resize-pane -U 5
bind -r C-Down resize-pane -D 5

# Select panes
bind Left select-pane -L
bind Right select-pane -R
bind Up select-pane -U
bind Down select-pane -D
# corrects for nested tmux sessions
bind -r Left select-pane -L
bind -r Right select-pane -R
bind -r Up select-pane -U
bind -r Down select-pane -D
