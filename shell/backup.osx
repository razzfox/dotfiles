backup_this_there() {
  if [[ $1 == "-h" ]] || [[ $1 == "--help" ]]; then
    echo "Usage: backup_this_there <source> <destination> [\"<exclude,any,directories>\"]"
    return 0
  fi

  rsync --verbose --archive --hard-links --one-file-system --human-readable --delete --delete-before --progress --exclude={/lost+found,"$3"} "$1" "$2"/backup-$(basename "$1")-$(date +%F)
}
