WALLPAPERS=~/walls

# Copy random wallpapers
set_walls() {
  test -d $WALLPAPERS || return 1

  mkdir -p ~/Pictures

  if test ! -f ~/Pictures/date.txt -o "$(cat ~/Pictures/date.txt 2>/dev/null)" != "$(date +%F)"; then
    rm ~/Pictures/* 2>/dev/null
    cp $(lr $WALLPAPERS | tail) ~/Pictures/ 2>/dev/null
    date +%F > ~/Pictures/date.txt
  fi
}

set_walls
