bat() {
  if test ! -d /sys/class/power_supply/BAT0; then
    echo "100%"
    return 0
  fi

  LEVEL="$( cat /sys/class/power_supply/BAT0/charge_now || cat /sys/class/power_supply/BAT0/energy_now )"
  FULL="$( cat /sys/class/power_supply/BAT0/charge_full || cat /sys/class/power_supply/BAT0/energy_full )"

  BAT=$(echo "scale=1; " $(echo "scale=3; $LEVEL / $FULL * 100" | bc -l) "/ 1" | bc -l | head -c -1)
  echo -n "${BAT}%,"
  cat /sys/class/power_supply/BAT0/status

  test "${BAT%%.*}" -ge 31
}


bat "$@"
