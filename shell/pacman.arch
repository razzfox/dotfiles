	pacman -Rns "$@"
}

pacman-remove-required() {
	echo "pacman -Rncs $@" >/dev/stderr
	pacman -Rncs "$@"
}

pacman-remove-breakrequirements() {
	echo "pacman -Rddns $@" >/dev/stderr
	pacman -Rddns "$@"
}

pacman-clean-cache() {
